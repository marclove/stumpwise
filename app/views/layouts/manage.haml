!!! 5
%html
	%head
		%meta{:charset => "utf-8"}
		%title= "stumpwise :: admin"
		=csrf_meta_tag
		=stylesheet_link_tag 'master.css', 'manage.css'
		=javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js'
		=javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js'
		=javascript_include_tag 'tiny_mce/jquery.tinymce.js','jquery.timeago.min.js','jquery.tablesorter.min.js','jquery.tablesorter.pager.js','rails.js','application.js','manage.js'
		=yield :head
	%body{:class => @body_class}
		#container
			#header
				%h1 Stumpwise Admin
				#account-nav
					=link_to 'Log Out', manage_logout_path
				%div{:style => "clear:both;"}
				#menu
					=link_to 'Sites', manage_root_path, :class => @menu == 'sites' ? 'current' : ''
					=link_to 'Contributions', manage_contributions_path, :class => @menu == 'contributions' ? 'current' : ''
					=link_to 'Users', manage_users_path, :class => @menu == 'users' ? 'current' : ''
					=link_to 'Themes', manage_themes_path, :class => @menu == 'themes' ? 'current' : ''
			#content
				= flash_messages
				= yield
				%div{:style => "clear:both;"}
			#footer
				&copy;
				%strong ProgressBound, Inc.
		
		%script{:type => "text/javascript"}
			:plain
				// <![CDATA[
			=yield :javascript
			:plain
				// ]]>