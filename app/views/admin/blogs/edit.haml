- @body_class = 'sidebar-right-240'
- @menu 			= 'website'
- @submenu 		= 'blogs'

=render 'admin/layouts/site_menu'
=form_for @blog, :url => admin_blog_path(@blog) do |f|
	#main
		%h1 Edit Blog
		=f.label :title, {}, {:class => 'on-top'}
		=f.text_field :title, :class => 'text_field big wide'
		=f.label :slug, {}, {:class => 'on-top'}
		=f.text_field :slug, :class => 'text_field wide'
		.buttons
			%button.positive{:type => 'submit'}
				=image_tag "icons-shadowless/tick.png", :alt => ''
				Save Changes
			=link_to "#{image_tag('icons-shadowless/cross.png', :alt => '')} Cancel".html_safe, :back, :class => 'negative'
			=link_to "#{image_tag('icons-shadowless/cross.png', :alt => '')} Delete Blog".html_safe, admin_blog_path(@blog), :confirm => "Are you sure you want to delete this blog and ALL of its articles? WARNING: This cannot be undone!", :method => :delete, :class => 'negative', :style => "float:right"
	#sidebar
		%p
			=f.check_box :published
			=f.label :published
		%p
			=f.check_box :show_in_navigation
			=f.label :show_in_navigation, "Include in site navigation"
