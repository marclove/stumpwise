- @body_class = 'no-sidebar'
- @menu 			= 'supporters'

#main
	%h1 Supporter Details
	%table{:id => "supporter_details"}
		%tr
			%th Full Name
			%td= "#{@supporter.name} #{@supporter.name_suffix}"
		%tr
			%th Address
			%td= @supporter.full_address
		%tr
			%th Email
			%td
				=mail_to(@supporter.email)
				%div{:style => "margin-top:6px;"}
					=check_box_tag('email_updates', '1', @supportership.receive_email, {:disabled => true})
					Receives email updates
		%tr
			%th Primary Phone
			%td= @supporter.phone
		%tr
			%th Mobile Phone
			%td
				=number_to_phone(@supporter.mobile_phone)
				%div{:style => "margin-top:6px;"}
					=check_box_tag('sms_updates', '1', @supportership.receive_sms, {:disabled => true})
					Receives SMS updates
		%tr
			%th Joined
			%td= timeago(@supportership.created_at)
