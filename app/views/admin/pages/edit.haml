- @body_class = 'sidebar-right-240'
- @menu 			= 'website'
- @submenu 		= 'pages'

=render 'admin/layouts/site_menu'
=form_for @page, :url => admin_page_path(@page) do |f|
	#main
		%h1 Edit Page
		=f.label :title, {}, {:class => 'on-top'}
		=f.text_field :title, :class => 'text_field big wide'
		=f.label :body, {}, {:class => 'on-top'}
		=f.text_area :body, :class => 'wide tinymce', :rows => 20
		.buttons
			%button.positive{:type => 'submit'}
				=image_tag "icons-shadowless/tick.png", :alt => ''
				Save Changes
			=link_to "#{image_tag('icons-shadowless/cross.png', :alt => '')} Cancel".html_safe, :back, :class => 'negative'
			=link_to "#{image_tag('icons-shadowless/cross.png', :alt => '')} Delete Page".html_safe, admin_page_path(@page), {:confirm => "Are you sure you want to delete this page?", :method => :delete, :class => 'negative', :style => 'float:right;'}

	#sidebar
		.details
			=f.check_box :published
			=f.label :published
		.details
			=f.check_box :show_in_navigation
			=f.label :show_in_navigation, "Include in site navigation"