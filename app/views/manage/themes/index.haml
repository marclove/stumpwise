- @body_class = 'no-sidebar'
- @menu 			= 'themes'

#main
	%h1 Themes
	%ul{:id => "themes", :class => "themes"}
		-for theme in @themes
			%li{:class => "theme"}
				=link_to theme.name, manage_theme_path(theme)
	.buttons
		=link_to "#{image_tag('icons-shadowless/plus-circle.png', :alt => '')} New Theme", new_manage_theme_path, :class => 'positive'
